{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClientCreateRequest",
  "type": "object",
  "properties": {
    "firstname": {
      "type": "string",
      "maxLength": 40
    },
    "lastname": {
      "type": "string",
      "maxLength": 40
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[0-9]{1,12}$",
      "maxLength": 12
    },
    "phone_extra": {
      "type": "string",
      "pattern": "^\\+?[0-9]{1,12}$",
      "maxLength": 12
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 40
    },
    "address": {
      "type": "string",
      "maxLength": 200
    }
  },
  "required": [
    "firstname",
    "lastname",
    "phone",
    "email"
  ],
  "additionalProperties": false
}