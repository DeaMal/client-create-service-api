{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClientCreateRequest",
  "type": "object",
  "properties": {
    "firstname": {
      "type": "string",
      "maxLength": 40
    },
    "lastname": {
      "type": "string",
      "maxLength": 40
    },
    "phone": {
      "type": "string",
      "pattern": "^\\s*(?:\\+?(\\d{1,3}))?([-. (]*(\\d{3})[-. )]*)?((\\d{3})[-. ]*(\\d{2,4})(?:[-.x ]*(\\d+))?)\\s*$",
      "maxLength": 18
    },
    "phone_extra": {
      "type": "string",
      "pattern": "^\\s*(?:\\+?(\\d{1,3}))?([-. (]*(\\d{3})[-. )]*)?((\\d{3})[-. ]*(\\d{2,4})(?:[-.x ]*(\\d+))?)\\s*$",
      "maxLength": 18
    },
    "email": {
      "type": "string",
      "format": "email",
      "pattern": "^[\\w-.]+@([\\w-]+.)+[\\w-]{2,4}$",
      "maxLength": 40
    },
    "address": {
      "type": "string",
      "maxLength": 200
    },
    "notes": {
      "type": "string",
      "maxLength": 1000
    }
  },
  "required": [
    "firstname",
    "lastname",
    "phone",
    "email"
  ],
  "additionalProperties": false
}